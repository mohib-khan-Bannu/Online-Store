
@model IEnumerable<Soft_Product.Models.Item>
@{@using Soft_Product.Models.Extenstion;
ViewData["Title"] = "Index";
Layout = "~/Views/Shared/_Layout_Layout.cshtml";
}

<section class="product_section layout_padding">
    <div class="container">

        <div class="heading_container heading_center">
            <h2>
                Our <span>products</span>
            </h2>
        </div>
        <div class="container">
            @foreach (var item in Context.Session.GetComplexData<IEnumerable<Category>>("categoryList") as IEnumerable<Category>)
            {
                <button a asp-route-categoryId="@item.CategoryId" asp-action="Idnex" asp-controller="SHowProduct" class="btn btn-outline-danger">@item.Name ></button>
            }


        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-sm-6 col-md-4 col-lg-4">
                    <div class="box">
                        <div class="option_container">

                            <div class="options">
                                <input type="button" name="AddtoCart" value="Add to Cart" class="option1" itemid="@item.ItemId" id="btnaddtocart" onclick="AddtoCart(this)" />
                                <a href="" class="option2">
                                    Buy Now
                                </a>
                            </div>
                        </div>
                        <div class="img-box">
                            @if (item.Image != "")
                            {
                                <img src="~/@item.Image" />
                                @*<img src="~/images/f2.png" style="height: 150px; width: 150px;" />*@

                            }

                        </div>
                        <div class="detail-box">
                            <h5>
                                @item.Name
                            </h5>
                            <h6>
                                $@item.Price
                            </h6>
                        </div>
                    </div>
                </div>


            }
        </div>
        <div class="btn-box">
            <a href="">
                View All products
            </a>
        </div>
    </div>
</section>

