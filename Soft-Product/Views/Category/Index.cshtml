
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p>Add Category</p>
<div class="row">
    <div class="col-8">
        <button class="btn btn-primary  m-2 p-2" id="addbtncategory">Add Category </button>
    </div>
    <div class="col-4">
        <input class="form-control form-control-navbar  float-end m-1 " id="txtsearch" style="width:57%" type="search" placeholder="Search" aria-label="Search">
    </div>
</div>
<table class="table table-bordered" id="datatabledata">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Date</th>
            <th>Photo</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody id="table_data"></tbody>

</table>
<div class="modal fade-modal" id="CategoryModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="text-info modal-title">Add Category</h1>
                <button class="close text-danger" data-dismiss="modal">&times</button>
            </div>

            <div class="modal-body" id="myform">

                <div class="form-group">
                    <label>Id</label>
                    <input type="text" class=" form-control" id="CatID" disabled="disabled" />
                </div>
                <div class="form-group">
                    <label>Name</label>
                    <input type="text" name="name"  class="   form-control" id="name" />
                </div>
                <div class="form-group">
                    <label>Date</label>
                    <input type="date" class=" form-control" id="date" />
                </div>
                <div class=" form-group ">
                    <div class="custom-file">
                        <input type="file" id="fileUpload" onchange="readURL(this);" class="fileUpload">

                        <img src="~/depositphotos_247872612-stock-illustration-no-image-available-icon-vector.jpg" id="imgpt" style="width:100px; height: 100px; border: 1px solid red;" />

                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button class="btn btn-primary "  onclick="AddCategory();" id="addcategory">Add Category</button>
                <button class="btn btn-warning  " onclick="UpdateCategory();" style="display: none;" id="btnupdate">Update</button>
                <button class="close text-danger btn-defult" data-dismiss="modal">Close</button>
            </div>

        </div>
    </div>
</div>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/Custome.js"></script>
<script src="~/Datatablejs/jquery.dataTables.js"></script>
<script src="~/Datatablejs/jquery.dataTables.min.js"></script >
<link rel="stylesheet" href="//cdn.datatables.net/1.13.5/css/jquery.dataTables.min.css"  />

